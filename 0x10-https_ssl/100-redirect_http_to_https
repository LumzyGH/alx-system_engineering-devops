234761 Upload task 100 - HAproxy configuration file that redirects HTTP traf…
…
Latest commit eab7050 on 12 Apr 2019
 History
 1 contributor
Executable File  41 lines (36 sloc)  1.04 KB

global
    log     /dev/log local0
    maxconn 2048
    user    haproxy
    group   haproxy
    tune.ssl.default-dh-param 2048

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option  redispatch
    timeout connect  5000
    timeout client  10000
    timeout server  10000
    option  forwardfor
    option  http-server-close

frontend www-http
    bind   0.0.0.0:80
    reqadd X-Forwarded-Proto:\ http
    default_backend www-backend
    redirect scheme https code 301 if !{ ssl_fc }

frontend www-https
    bind   0.0.0.0:443 ssl crt /etc/haproxy/certs/www.yo-ra.tech
    reqadd X-Forwarded-Proto:\ https
    acl    letsencrypt-acl path_beg /.well-known/acme-challenge/
    use_backend letsencrypt-backend if letsencrypt-acl
    default_backend www-backend

backend www-backend
    balance  roundrobin
    redirect scheme https if !{ ssl_fc }
    server 28056-web-01 3.238.204.225:80 check
    server 28056-web-02 3.238.248.146:80 check

backend letsencrypt-backend
    server letsencrypt 127.0.0.1:54321

